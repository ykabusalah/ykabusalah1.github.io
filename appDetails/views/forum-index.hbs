<!-- Page Content -->
<div class="container ns-forum-index">
    <div class="row">
        <!-- Page Heading -->
        <div class="col-md-12">
            <h1 class="forum-header-text">{{>forum-svg-icon}} Latest Questions</h1>
        </div>

        <div class="container-fluid questions-wrapper">
            <div class="row">
                <div class="col-md-12">
                    {{#unless questions}}
                        {{#if user}}
                            {{>ask-question-form}}
                        {{else}}
                            <h5 class="my-4">There are no questions, <a href="{{forumBaseUrl}}/login">sign in</a> to ask a question maybe?</h5>
                        {{/if}}
                    {{/unless}}
                </div>

                {{#if questions}}
                    <div class="col-md-12">
                        <div class="row">
                            {{#each questions}}
                                <div class="col-lg-12 portfolio-item">
                                    <div class="card">
                                        <a href="{{../forumBaseUrl}}/view-question/{{this.id}}">{{this.title}}</a>
                                        <div class="card-body">
                                            <h6>Uploaded by <b>{{this.user.full_name}}</b> âˆ™ <span>about {{moment this.created_at "fromNow"}}</span></h6>
                                            <p>{{truncate this.description 120}}</p>
                                        </div>
                                    </div>
                                </div>
                            {{/each}}
                        </div>
                        <!-- /.row -->

                        {{#checklength pages 1}}
                            <!-- Pagination -->
                            <ul class="pagination justify-content-center">
                                {{#each pages}}
                                    <li class="page-item">
                                        <a class="page-link" href="{{this.url}}">{{this.number}}</a>
                                    </li>
                                {{/each}}
                            </ul>
                        {{/checklength}}
                    </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>
<!-- /.container -->
